<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_menu__awal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_menu"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zadi.kosakatabahasaarab.Menu_Awal"
    tools:showIn="@layout/activity_menu__awal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:background="@color/tranparent"
            android:src="@mipmap/menyambut" />

        <Button
            android:id="@+id/btnKosaKata"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/dsn_btn"
            android:text="Kosakata"
            android:textColor="@color/red"
            android:textSize="35dp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnQuiz"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/dsn_btn"
            android:text="Quiz"
            android:textColor="@color/red"
            android:textSize="35dp"
            android:textStyle="bold|italic"
            android:typeface="sans" />
    </LinearLayout>
</ScrollView>
