<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_kosakata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_kosakata"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_kosakata">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listRecycleView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/footer" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/listRecycleView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@mipmap/switcher"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgViewOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/no_available" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtIndo"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@mipmap/teks_indo"
                android:gravity="center"
                android:text="No Text"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/txtArab"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@mipmap/teks_arab"
                android:gravity="center"
                android:text="No Text"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
